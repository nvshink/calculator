<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_cherry</item>
        <item name="colorPrimaryVariant">@color/blue_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="backgroundColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/mak_bold</item>
    </style>

    <style name="ButtonTextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.MyApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/commissioner</item>
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="Widget.MyApp.Button.PrimaryButton" parent="Widget.MyApp.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>

    </style>

    <style name="Widget.MyApp.Button.PrimaryVariantButton" parent="Widget.MyApp.Button">
        <item name="backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>

    </style>

    <style name="Widget.MyApp.Button.OnPrimaryButton" parent="Widget.MyApp.Button">
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <!--        <item name="android:background">@drawable/on_primary_button_selector</item> TODO Make shadow-->
        <item name="strokeWidth">5dp</item>
        <item name="strokeColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Widget.MyApp.TextView" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textSize">36sp</item>
        <item name="fontFamily">@font/commissioner</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Calculator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Calculator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>